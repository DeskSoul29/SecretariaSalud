<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../../../tools/head'); %>
        <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
        <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../../tools/sidebarTec'); %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../../../tools/topbar'); %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <div class="container">
                                <div class="card o-hidden border-0 shadow-lg my-5">
                                    <div class="card-body p-0">
                                        <!-- Nested Row within Card Body -->
                                        <div class="p-5">
                                            <div class="text-center">
                                                <h1 class="h4 text-gray-900 mb-4">MEDIDAS SANITARIAS A ESTABLECIMIENTOS
                                                </h1>
                                            </div>
                                            <form onsubmit="medSaniEstaForm(event)" action="" method="POST"
                                                autocomplete="off">

                                                <%- include("./templateHV") %>

                                                    <div class="form-group row">
                                                        <div class="col-sm-5">
                                                            <label class="mr-sm-2" for="medidaApli">Medida
                                                                Aplicada</label>
                                                            <select id="medidaApli" name="medidaApli"
                                                                class="custom-select mr-sm-2">
                                                                <option selected disabled>
                                                                    Seleccione
                                                                </option>
                                                                <option value="CLAUSURA TEMPORAL TOTAL">CLAUSURA
                                                                    TEMPORAL TOTAL</option>
                                                                <option value="CLAUSURA TEMPORAL PARCIAL">CLAUSURA
                                                                    TEMPORAL PARCIAL</option>
                                                                <option
                                                                    value="SUSPENSIÓN TOTAL DE TRABAJOS O SERVICIOS">
                                                                    SUSPENSIÓN TOTAL DE TRABAJOS O SERVICIOS</option>
                                                                <option
                                                                    value="SUSPENSIÓN PARCIAL DE TRABAJOS O SERVICIOS">
                                                                    SUSPENSIÓN PARCIAL DE TRABAJOS O SERVICIOS</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <label class="mr-sm-2" for="fApli">Fecha Aplicación</label>
                                                            <input type="date" placeholder="Ninguna"
                                                                class="form-control form-control-user" id="fApli"
                                                                name="fApli" />
                                                        </div>

                                                        <div class="col-sm-4">
                                                            <label class="mr-sm-2" for="motivoApli">Motivo de
                                                                Aplicación</label>
                                                            <input type="text" onkeyup="mayus(this);"
                                                                class="form-control form-control-user" id="motivoApli"
                                                                name="motivoApli" />
                                                        </div>
                                                    </div>

                                                    <div class="row" style="text-align: center !important;">
                                                        <div class="col-sm-12">
                                                            <label class="mr-sm-12">PROCESO SANCIONATORIO</label>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label class="mr-sm-2" for="solicitudApli">Solicitud</label>
                                                            <select id="solicitudApli" name="solicitudApli"
                                                                class="custom-select mr-sm-2">
                                                                <option selected disabled>
                                                                    Seleccione
                                                                </option>
                                                                <option value="SI">SI</option>
                                                                <option value="NO">NO</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label class="mr-sm-2" for="fechSancio">Fecha</label>
                                                            <input type="date" class="form-control form-control-user"
                                                                id="fechSancio" name="fechSancio" readonly />
                                                        </div>
                                                    </div>

                                                    <!-- Divider -->
                                                    <hr class="sidebar-divider"
                                                        style="border-top: 1px solid rgb(0 0 0);">

                                                    <div class="form-group row">
                                                        <div class="col-sm-12">
                                                            <label class="mr-sm-2" for="observacion">Adjuntar
                                                                Archivo(s)</label>
                                                            <div class="fv-row">
                                                                <div class="dropzone" id="dropzone">
                                                                    <!--begin::Message-->
                                                                    <div class="dz-message needsclick">
                                                                        <!--begin::Icon-->
                                                                        <i
                                                                            class="bi bi-file-earmark-arrow-up text-primary fs-3x"></i>
                                                                        <!--begin::Info-->
                                                                        <div class="ms-4">
                                                                            <h3 class="fs-5 fw-bold text-gray-900 mb-1">
                                                                                Arrastra archivos aqui o da
                                                                                click para buscar</h3>
                                                                            <span class="fs-7 fw-semibold "
                                                                                style="color: #50525c!important;">Cantidad
                                                                                Maxima de Archivos:
                                                                                10</span>
                                                                            <br>
                                                                            <span class="fs-7 fw-semibold "
                                                                                style="color: #50525c!important;">Peso
                                                                                Maximo:
                                                                                30 MB</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <button class="btn btn-primary btn-user btn-block" type="submit">
                                                        Registrar Consolidación
                                                    </button>
                                                    <a href="/tecnico/Consolidaciones/Enviar"
                                                        class="btn btn-secondary btn-user btn-block">
                                                        Cancelar
                                                    </a>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../../tools/footer'); %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Seleccione "Cerrar
                    sesión" a continuación si está listo para
                    finalizar su sesión actual.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <a class="btn btn-primary" href="/tecnico/logout">Cerrar Sesión</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- Validations -->
    <script type="text/JavaScript" src="/js/Tecnico/formularios.js"></script>
    <script type="text/JavaScript" src="/js/tools/codigoEsta.js"></script>
    <script type="text/JavaScript" src="/js/tools/consolidaciones.js"></script>
    <script type="text/JavaScript" src="/js/tools/dropzone.js"></script>

    <!-- Alert -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script type="text/JavaScript">
        var arrayCod = []
        var arrayEsta = [] 
        <% if(codigos){ %>
            <% codigos.forEach((codigos)=> { %>
                arrayCod.push(["<%= codigos.grupo %>"], ["<%= codigos.codigo %>"], ["<%= codigos.tipo %>"], ["<%= codigos.nivelRiesgo %>"])
            <% }) %>
        <% } %>

        <% if(hojavida){ %>
            <% hojavida.forEach((hojavida)=> { %>
                arrayEsta.push(["<%= hojavida.provincia %>"], ["<%= hojavida.municipio %>"], ["<%= hojavida.tipo %>"], ["<%= hojavida.razonSocial %>"], ["<%= hojavida.tipoIdentificacion %>"], ["<%= hojavida.identificacion %>"], ["<%= hojavida.direccion %>"], ["<%= hojavida.repreLegal %>"], ["<%= hojavida.estado %>"], ["<%= hojavida.telefono %>"])
            <% }) %>
        <% } %>
    </script>

    <script>
        $(window).bind('load', function () {
            var nav = document.getElementById('nav2');
            $('#navlink1').removeClass('collapsed');
            var nav3 = document.getElementById('collapseOne');
            var nav4 = document.getElementById('show2');
            nav.className += "  active";
            nav3.className += "  show";
            nav4.className += "  active";
        });

        $("#solicitudApli").change(function () {
            if (document.getElementById("solicitudApli").value == "SI") {
                $("#fechSancio").attr("readonly", false);
            } else {
                $("#fechSancio").attr("readonly", true);
            }
        });
    </script>
</body>

</html>