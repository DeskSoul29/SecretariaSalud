                                                            <!-- <label class="mr-sm-2">Medidas Sanitarias</label>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="estblecimientosON" name="estblecimientosON"
                                                                    value="ESTABLECIMIENTOS">
                                                                <label class="form-check-label"
                                                                    for="estblecimientosON">ESTABLECIMIENTOS</label>
                                                            </div>
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox"
                                                                    id="productosON" name="productosON"
                                                                    value="PRODUCTOS">
                                                                <label class="form-check-label"
                                                                    for="productosON">PRODUCTOS</label>
                                                            </div> -->
                                                        </div>
                                                    </div>

                                                    <div id="rotuladoTemplate" style="display: none;">
