                                                                <option
                                                                    value="ENFOQUE DE RIESGO - EXPENDIOS DE BEBIDAS ALCOHÓLICAS">
                                                                    ENFOQUE DE RIESGO - EXPENDIOS DE BEBIDAS ALCOHÓLICAS
                                                                </option>
                                                                <option value="ENFOQUE DE RIESGO - PLAZAS DE MERCADO">
                                                                    ENFOQUE DE RIESGO - PLAZAS DE MERCADO
                                                                </option>
                                                                <option
                                                                    value="ENFOQUE DE RIESGO - ENSAMBLES DE ALIMENTOS">
                                                                    ENFOQUE DE RIESGO - ENSAMBLES DE ALIMENTOS
                                                                </option>
                                                                <option value="PGIRHS">PGIRHS</option>
                                                                <option value="CEMENTERIOS">CEMENTERIOS</option>
                                                                <option value="ACUEDUCTOS">ACUEDUCTOS</option>
                                                                <option value="PISCINAS">PISCINAS</option>
                                                                <option
                                                                    value="PARA DEPOSITOS, ALMACENES Y EXPENDIOS COMERCIALES DE PLAGUICIDAS">
                                                                    PARA DEPOSITOS, ALMACENES Y EXPENDIOS COMERCIALES DE
                                                                    PLAGUICIDAS
