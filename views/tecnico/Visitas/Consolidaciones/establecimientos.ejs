    <script type="text/JavaScript">
        var arrayCod = []
        var arrayEsta = [] 
        <% if(codigos){ %>
            <% codigos.forEach((codigos)=> { %>
                arrayCod.push(["<%= codigos.grupo %>"], ["<%= codigos.codigo %>"], ["<%= codigos.tipo %>"], ["<%= codigos.nivelRiesgo %>"])
            <% }) %>
        <% } %>

        <% if(hojavida){ %>
            <% hojavida.forEach((hojavida)=> { %>
                arrayEsta.push(["<%= hojavida.provincia %>"], ["<%= hojavida.municipio %>"], ["<%= hojavida.tipo %>"], ["<%= hojavida.razonSocial %>"], ["<%= hojavida.tipoIdentificacion %>"], ["<%= hojavida.identificacion %>"], ["<%= hojavida.direccion %>"], ["<%= hojavida.repreLegal %>"], ["<%= hojavida.estado %>"], ["<%= hojavida.telefono %>"])
            <% }) %>
        <% } %>
    </script>

