<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../tools/head'); %>
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../tools/sidebarTec'); %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../tools/topbar'); %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
              Bienvenido, <%= user.nombre %>
              <%= user.apellido %>
            </h1>
            <div id="btnCronograma" style="display: none;">
              <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class=" fas fa-download fa-sm text-white-50"></i> Subir Cronograma</a>
            </div>
          </div>

          <!-- Content Row -->
          <div class="form-row align-items-center mb-sm-2">

            <!-- Consolidaciones Pendientes -->
            <div class="col my-1">
              <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                        Consolidaciones Pendientes
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        <%= consPend %>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-file-circle-exclamation fa-2x"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Consolidaciones Conrregidas -->
            <div class="col my-1">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                        Consolidaciones Corregidas
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        <%= consCorre %>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-file-pen fa-2x"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Consolidaciones Enviadas -->
            <div class="col my-1">
              <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                        Consolidaciones Enviadas
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        <%= consEnv %>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-file-export fa-2x"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Consolidaciones Rechazadas -->
            <div class="col my-1">
              <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                        Consolidaciones Rechazadas
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        <%= ListconsRech.length %>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-file-circle-xmark fa-2x"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Consolidaciones Aceptadas -->
            <div class="col my-1">
              <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                        Consolidaciones Aceptadas
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">
                        <%= consAcep %>
                      </div>
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-file-circle-check fa-2x"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>

          <div class="row">
            <div class="col-xl-9">
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">
                    Listado de Consolidaciones Rechazadas
                  </h6>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0" style="font-size: 13px; text-align: center !important">
                      <thead>
                        <tr>
                          <th scope="col">Acción</th>
                          <th scope="col">Fecha Reporte</th>
                          <th scope="col">Municipio</th>
                          <th scope="col">Tipo Consolidación</th>
                          <th scope="col">Observación</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(ListconsRech){ %>
                        <% ListconsRech.forEach((ListconsRech)=> { %>
                        <tr>
                          <td>
                            <% if(ListconsRech.tipo == "Establecimiento" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/Establecimientos/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } else if(ListconsRech.tipo == "Antirrabica" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/AntirrabicaAnimal/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } else if(ListconsRech.tipo == "Edu. Sanitaria" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/EduSanitaria/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } else if(ListconsRech.tipo == "Eventos Salud Publica" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/EventosSaludPublica/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } else if(ListconsRech.tipo == "Carnetizados" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/ListadoCarnetizados/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } else if(ListconsRech.tipo == "Vehiculos" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/Vehiculos/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } else if(ListconsRech.tipo == "Toma de Muestra" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/TomaMuestras/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } else if(ListconsRech.tipo == "Quejas" ){ %>
                            <a href="/tecnico/Consolidaciones/Rechazado/Quejas/<%= ListconsRech.consolidacion.consID %>"><span class="badge badge-danger text-uppercase">Rechazado</span></a>
                            <% } %>
                          </td>
                          <td>
                            <%= moment(ListconsRech.createdAt,"YYYY/MM/DD").format('DD-MM-YYYY h:mma'); %>
                          </td>
                          <td>
                            <%= ListconsRech.consolidacion.municipio %>
                          </td>
                          <td>
                            <%= ListconsRech.tipo %>
                          </td>
                          <td>
                            <%= ListconsRech.respuesta.motivo %>
                          </td>
                        </tr>
                        <% }); %>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-xl-3">
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Vacunaciones
                  <span class="badge badge-primary badge-pill"><%= vacunas[0].suma %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Total Visitas
                  <span class="badge badge-primary badge-pill"><%= visitAcep %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  IVC Publicidad
                  <span class="badge badge-primary badge-pill"><%= visitIVCPubli %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  IVC Rotulado
                  <span class="badge badge-primary badge-pill"><%= visitRotu %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  M.S. Establecimientos
                  <span class="badge badge-primary badge-pill"><%= visitMSEstab %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  M.S. Productos
                  <span class="badge badge-primary badge-pill"><%= visitMSProd %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Cementerios
                  <span class="badge badge-primary badge-pill"><%= visitCemen %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  Morgues
                  <span class="badge badge-primary badge-pill"><%= visitMorg %></span>
                </li>
              </ul>
            </div>

          </div>

        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../tools/footer'); %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          Seleccione "Cerrar sesión" a continuación si está listo para
          finalizar su sesión actual.
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">
            Cancelar
          </button>
          <a class="btn btn-primary" href="/tecnico/logout">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>

  <script>
    $(window).bind("load", function() {
      var nav = document.getElementById("nav1");
      nav.className += "  active";
    });
  </script>
</body>

</html>