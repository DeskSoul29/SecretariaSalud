<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../../../tools/head'); %>
  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
  </script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/amcharts/3.21.15/plugins/export/libs/FileSaver.js/FileSaver.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.15.6/xlsx.full.min.js"></script>
  <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css">
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../../tools/sidebarProf'); %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../../../tools/topbar'); %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- DataTales -->
          <div class="card shadow mb-4">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/profesional/Consolidaciones/Ver">Consolidaciones</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quejas
                </li>
              </ol>
            </nav>
            <!-- <button id="button-a">Create Excel</button> -->

            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0" style="font-size: 13px;  text-align: center !important;">
                  <thead>
                    <tr>
                      <th>Estado</th>
                      <th>Fecha_Enviado</th>
                      <th>Tecnico Responsable</th>
                      <th>Provincia</th>
                      <th>Municipio</th>
                      <th>Tipo de Queja</th>
                      <th>Establecimiento (Si Aplica)</th>
                      <th>Descripción de la Queja</th>
                      <th>Persona que Causa la Queja</th>
                      <th>Persona Afectada</th>
                      <th>Fecha Recepción Queja</th>
                      <th>Fecha_Visita</th>
                      <th>Requerimientos</th>
                      <th>Observaciones</th>
                      <th>Archivos</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Estado</th>
                      <th>Fecha_Enviado</th>
                      <th>Tecnico Responsable</th>
                      <th>Provincia</th>
                      <th>Municipio</th>
                      <th>Tipo de Queja</th>
                      <th>Establecimiento (Si Aplica)</th>
                      <th>Descripción de la Queja</th>
                      <th>Persona que Causa la Queja</th>
                      <th>Persona Afectada</th>
                      <th>Fecha Recepción Queja</th>
                      <th>Fecha_Visita</th>
                      <th>Requerimientos</th>
                      <th>Observaciones</th>
                      <th>Archivos</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% if (Queja){ %>
                    <% Queja.forEach((Queja)=> { %>
                    <tr>
                      <td>
                        <% if(Queja.status=="Pendiente" ){ %>
                        <a href="/profesional/Consolidaciones/Validar/Quejas/<%= Queja._id %>"><span class="badge badge-warning text-uppercase">Pendiente</span></a>
                        <% }else if(Queja.status=="Corregido" ){ %>
                        <a href="/profesional/Consolidaciones/Correccion/Quejas/<%= Queja._id %>"><span class="badge badge-primary text-uppercase">Corregido</span></a>
                        <% }else if(Queja.status=="Rechazado" ){ %>
                        <span class="badge badge-danger text-uppercase">Rechazado</span>
                        <% }else if(Queja.status == "Enviado"){ %>
                        <span class="badge badge-info text-uppercase">Enviado</span>
                        <% }else if(Queja.status=="Aceptado" ){ %>
                        <span class="badge badge-success text-uppercase">Aceptado</span>
                        <% } %>
                      </td>
                      <td>
                        <%= moment(Queja.createdAt,"YYYY/MM/DD").format('DD-MM-YYYY'); %>
                      </td>
                      <td>
                        <%= Queja.responsable.userResponsable %>
                        <%= Queja.responsable.nombreResponsable %>
                      </td>
                      <td>
                        <%= Queja.provincia %>
                      </td>
                      <td>
                        <%= Queja.ForQuejas.municipioComuni %>
                        <%= Queja.ForQuejas.municipioEstable %>
                      </td>
                      <td>
                        <%= Queja.ForQuejas.tipoQueja %>
                      </td>
                      <td>
                        <%= Queja.razonSocial %>
                      </td>
                      <td>
                        <%= Queja.ForQuejas.descQueja %>
                      </td>
                      <td>
                        <%= Queja.ForQuejas.perCausaQueja %>
                      </td>
                      <td>
                        <%= Queja.ForQuejas.perAfectQueja %>
                      </td>
                      <td>
                        <%= moment(Queja.ForQuejas.frecep,"YYYY/MM/DD").add(1, 'days').format('DD-MM-YYYY'); %>
                      </td>
                      <td>
                        <%= moment(Queja.fvisit,"YYYY/MM/DD").add(1, 'days').format('DD-MM-YYYY'); %>
                      </td>
                      <td>
                        <%= Queja.ForQuejas.reqQueja %>
                      </td>
                      <td>
                        <%= Queja.observaciones %>
                      </td>
                      <td>
                        <a onclick=""><span class="badge badge-primary text-uppercase">Descargar</span></a>
                      </td>
                    </tr>
                    <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%- include('../../../tools/footer'); %>
        <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">Seleccione "Cerrar
            sesión" a continuación si está listo para
            finalizar su sesión actual.</div>
          <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
            <a class="btn btn-primary" href="/profesional/logout">Cerrar Sesión</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/js/demo/datatables-demo.js"></script>

    <!-- Excel -->
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>

    <script>
      $(window).bind('load', function() {
        var nav = document.getElementById('nav2');
        $('#navlink1').removeClass('collapsed');
        var nav3 = document.getElementById('collapseTwo');
        var nav4 = document.getElementById('show1');
        nav.className += "  active";
        nav3.className += "  show";
        nav4.className += "  active";
      });
      $('#dataTable').DataTable({
        order: [
          [1, 'desc']
        ],
        dom: 'Bfrtip',
        buttons: [{
          extend: 'excelHtml5',
          autoFilter: true,
          sheetName: 'QUEJAS',
        }]
      });
    </script>
</body>

</html>