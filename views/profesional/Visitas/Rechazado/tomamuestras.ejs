<html lang="es">

<head>
  <%- include('../../../tools/head'); %>
  <link rel="stylesheet" href="/css/dropzone.css">
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../../tools/sidebarProf'); %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../../tools/topbar'); %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="container">
            <div class="card o-hidden border-0 shadow-lg">
              <div class="card-body p-0">
                <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/profesional/Consolidaciones/Ver">Consolidaciones</a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="/profesional/Consolidaciones/Ver/TomaMuestras">Toma de Muestras</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Corregir
                    </li>
                  </ol>
                </nav>
                <!-- Nested Row within Card Body -->
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">TOMA DE MUESTRAS</h1>
                  </div>

                  <form onsubmit="tomMuestraForm(event)" action="/profesional/Consolidaciones/Rechazado/TomaMuestras/<%= consolidacion._id %>" method="POST" autocomplete="off" enctype="multipart/form-data">
                    <input type="text" value="on" id="tomaMuestraON" name="tomaMuestraON" style="display: none;" readonly>

                    <div class="form-group row">
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="criterio">Criterio</label>
                        <input type="text" class="form-control form-control-user" value="Rechazado" readonly>
                      </div>
                      <div class="col-sm-9" id="divMotivo">
                        <label class="mr-sm-2" for="motivo">Motivo</label>
                        <textarea maxlength="270" rows="2" name="motivo" id="motivo" class="form-control form-control-user" readonly><%= consolidacion.reporte.motivo %></textarea>
                      </div>
                    </div>

                    <!-- Divider -->
                    <hr class="sidebar-divider" style="border-top: 1px solid rgb(0 0 0)" />

                    <div class="form-row align-items-center mb-sm-2">
                      <div class="col my-1">
                        <label class="mr-sm-2" for="provinciaID">Provincia</label>
                        <input type="text" class="form-control form-control-user" id="provinciaID" name="provincia" value="<%= user.provincia %>" readonly>
                      </div>
                      <div class="col my-1">
                        <label class="mr-sm-2" for="muniSelect">Municipio</label>
                        <input type="text" class="form-control form-control-user" id="muniSelect" name="municipio" value="<%= consolidacion.municipio %>" readonly>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-8 mb-3 mb-sm-0">
                        <label class="mr-sm-2" for="grupEsta">Grupo Del
                          Establecimiento</label>
                        <input type="text" value="<%= consolidacion.hojavida.grupo %>" class="form-control form-control-user" id="grupEsta" name="grupEsta" readonly />
                      </div>
                      <div class="col-sm-2">
                        <label class="mr-sm-2" for="codEsta">Codigo</label>
                        <input type="text" value="<%= consolidacion.hojavida.codigo %>" class="form-control form-control-user" id="codEsta" name="codEsta" readonly />
                      </div>
                      <div class="col-sm-2">
                        <label class="mr-sm-2" for="Nriesgo">Nivel de Riesgo</label>
                        <input type="text" value="<%= consolidacion.hojavida.nivelRiesgo %>" class="form-control form-control-user" id="Nriesgo" name="Nriesgo" readonly />
                      </div>

                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="tipoEsta">Tipo Del
                          Establecimiento</label>
                        <input type="text" value="<%= consolidacion.hojavida.tipo %>" class="form-control form-control-user" id="tipoEsta" name="tipoEsta" readonly />
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-5">
                        <label class="mr-sm-2" for="rSocial">Razón Social</label>
                        <input type="text" value="<%= consolidacion.hojavida.razonSocial %>" class="form-control form-control-user" id="rSocial" name="rSocial" readonly />
                      </div>
                      <div class="col-sm-2">
                        <label class="mr-sm-3" for="tIden">Tipo </label>
                        <input type="text" value="<%= consolidacion.hojavida.tipoIdentificacion %>" id="tIden" name="tIden" class="form-control form-control-user" readonly>
                      </div>
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="inputIden">Identificación</label>
                        <input type="number" value="<%= consolidacion.hojavida.identificacion %>" id="inputIden" name="inputIden" class="form-control form-control-user" readonly>
                      </div>
                      <div class="col-sm-2">
                        <label class="mr-sm-2" for="phone">Telefono</label>
                        <input type="number" value="<%= consolidacion.hojavida.telefono %>" id="phone" name="phone" class="form-control form-control-user" readonly>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="rLegal">Representante Legal</label>
                        <input type="text" value="<%= consolidacion.hojavida.repreLegal %>" class="form-control form-control-user" id="rLegal" name="rLegal" readonly />
                      </div>
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="direccion">Dirección</label>
                        <input type="text" value="<%= consolidacion.hojavida.direccion %>" class="form-control form-control-user" id="direccion" name="direccion" readonly />
                      </div>
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="estado">Estado</label>
                        <input type="text" value="<%= consolidacion.hojavida.estado %>" class="form-control form-control-user" id="estado" name="estado" readonly />
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-4">
                        <label class="mr-sm-2" for="tipMues">Tipo de Muestra</label>
                        <select id="tipMues" name="tipMues" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="AGUA PARA CONSUMO HUMANO">
                            AGUA PARA CONSUMO HUMANO
                          </option>
                          <option value="AGUA DE USO RECREATIVO">
                            AGUA DE USO RECREATIVO
                          </option>
                          <option value="ALIMENTOS">ALIMENTOS</option>
                          <option value="BEBIDAS ALCOHOLICAS">
                            BEBIDAS ALCOHOLICAS
                          </option>
                          <option value="INTOXICACIONES ETAS">
                            INTOXICACIONES ETAS
                          </option>
                        </select>
                      </div>
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="descripTip">Descripción De La Muestra</label>
                        <input type="text" class="form-control form-control-user" id="descripTip" name="descripTip" onkeyup="mayus(this);" readonly />
                      </div>
                      <div class="col-sm-5">
                        <label class="mr-sm-2" for="tipAnali">Tipo de Analisis</label>
                        <select id="tipAnali" name="tipAnali" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="FISICOQUÍMICO">FISICOQUÍMICO</option>
                          <option value="MICROBIOLÓGICO">
                            MICROBIOLÓGICO
                          </option>
                          <option value="FISICOQUÍMICO Y MICROBIOLÓGICO">
                            FISICOQUÍMICO Y MICROBIOLÓGICO
                          </option>
                        </select>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="zona">Zona</label>
                        <select id="zona" name="zona" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="RURAL">RURAL</option>
                          <option value="URBANA">URBANA</option>
                        </select>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="objEst">Objeto de Analisis</label>
                        <select id="objEst" name="objEst" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="VIGILANCIA">VIGILANCIA</option>
                          <option value="POR REQUERIMIENTO DE ALGUN ENTE DE CONTROL">
                            POR REQUERIMIENTO DE ALGUN ENTE DE CONTROL
                          </option>
                          <option value="POR QUEJA, ACCION POPULAR, DERECHO DE PETICIÓN">
                            POR QUEJA, ACCION POPULAR, DERECHO DE PETICIÓN
                          </option>
                          <option value="MAPA DE RIESGO">
                            MAPA DE RIESGO
                          </option>
                        </select>
                      </div>
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="fVisit">Fecha_Visita</label>
                        <input type="date" name="fVisit" class="form-control form-control-user" value="<%= moment(consolidacion.fvisit).add(1, 'days').format('YYYY-MM-DD'); %>" readonly />
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="acompananteEmp">Nombre Y Cargo Del Acompañante Por Parte De La
                          Empresa Y/O Institución</label>
                        <input type="text" class="form-control form-control-user" id="acompananteEmp" name="acompananteEmp" onkeyup="mayus(this);" value="<%= consolidacion.ForTomaMuestras.acompanante %>" />
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="observacion">Observaciones
                          (Opcional)</label>
                        <textarea name="observacion" id="observacion" onkeyup="mayus(this);" maxlength="270" rows="2" class="form-control form-control-user"><%= consolidacion.observaciones %></textarea>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2">Archivos Adjuntos</label>
                        <a href="/profesional/evidencia/<%= consolidacion._id %>" type="button" class="btn btn-info">Descargar</a>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2">Resultados Laboratorio</label>
                        <a href="/profesional/evidenciaTM/<%= consolidacion._id %>" type="button" class="btn btn-info">Descargar</a>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="fields">Adjuntar
                          Archivo(s) Nuevos</label>
                        <div class="drop-zone">
                          <span class="drop-zone__prompt">Arrastra el archivo o da click para buscar</span>
                          <input type="file" name="myFile" id="myFile" class="drop-zone__input" />
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="fields">Adjuntar
                          Resultado Nuevo</label>
                        <div class="drop-zone">
                          <span class="drop-zone__prompt">Arrastra el archivo o da click para buscar</span>
                          <input type="file" name="fileRes" id="fileRes" class="drop-zone__input" />
                        </div>
                      </div>
                    </div>

                    <button class="btn btn-primary btn-user btn-block" type="submit">
                      Enviar Corrección
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../../tools/footer'); %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          Seleccione "Cerrar sesión" a continuación si está listo para
          finalizar su sesión actual.
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">
            Cancelar
          </button>
          <a class="btn btn-primary" href="/profesional/logout">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Validations -->
  <script type="text/JavaScript" src="/js/tools/dropzone.js"></script>
  <script type="text/JavaScript" src="/js/Tecnico/formularios.js"></script>

  <!-- Alert -->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <% if(typeof alert !="undefined" ) { %>
  <script type="text/JavaScript">
    Swal.fire({
        title: '<%= alert[0].alertTitle %>',
        text:'<%= alert[0].alertMessage %>',
        icon:'<%= alert[0].alertIcon %>',
        showConfirmButton: <%= alert[0].showConfirmButton %>,
        timer: <%= alert[0].timer %>
      }).then(()=>{
        window.location = '<%= alert[0].ruta %>'
      })
    </script>
  <% } %>

  <script>
    $(window).bind('load', function() {
      var nav = document.getElementById('nav2');
      $('#navlink1').removeClass('collapsed');
      var nav3 = document.getElementById('collapseTwo');
      var nav4 = document.getElementById('show1');
      nav.className += "  active";
      nav3.className += "  show";
      nav4.className += "  active";
    });

    document.getElementById("tipMues").value = "<%= consolidacion.ForTomaMuestras.tipMuestra %>"
    document.getElementById("tipAnali").value = "<%= consolidacion.ForTomaMuestras.tipAnalisis %>"
    document.getElementById("zona").value = "<%= consolidacion.ForTomaMuestras.zona %>"
    document.getElementById("objEst").value = "<%= consolidacion.ForTomaMuestras.objAnalisis %>"

    if ("<%= consolidacion.ForTomaMuestras.tipMuestra %>" == "ALIMENTOS" || "<%= consolidacion.ForTomaMuestras.tipMuestra %>" == "BEBIDAS ALCOHOLICAS") {
      document.getElementById("descripTip").value = "<%= consolidacion.ForTomaMuestras.descMuestra %>"
      $("#descripTip").attr("readonly", false);
    }
    $("#tipMues").change(function() {
      if (document.getElementById("tipMues").value == "ALIMENTOS" || document.getElementById("tipMues").value == "BEBIDAS ALCOHOLICAS") {
        $("#descripTip").attr("readonly", false);
      } else {
        document.getElementById("descripTip").value = ""
        $("#descripTip").attr("readonly", true);
      }
    });
  </script>
</body>

</html>