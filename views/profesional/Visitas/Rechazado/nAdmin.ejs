<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../../../tools/head'); %>
  <link rel="stylesheet" href="/css/dropzone.css">
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../../tools/sidebarProf'); %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../../tools/topbar'); %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="container">
            <div class="card o-hidden border-0 shadow-lg">
              <div class="card-body p-0">
                <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/profesional/Consolidaciones/Ver">Consolidaciones</a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="/profesional/Consolidaciones/Ver/NoveAdministrativa">Informe Mensual</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Corregir
                    </li>
                  </ol>
                </nav>
                <!-- Nested Row within Card Body -->
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">INFORME MENSUAL</h1>
                  </div>

                  <form onsubmit="novAdminis(event)" action="/profesional/Consolidaciones/Rechazado/NoveAdministrativa/<%= consolidacion._id %>" method="POST" enctype="multipart/form-data">
                    <input type="text" value="on" id="noveadministrativa" name="noveadministrativa" style="display: none;" readonly>

                    <div class="form-group row">
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="criterio">Criterio</label>
                        <input type="text" class="form-control form-control-user" value="Rechazado" readonly>
                      </div>
                      <div class="col-sm-9" id="divMotivo">
                        <label class="mr-sm-2" for="motivo">Motivo</label>
                        <textarea maxlength="270" rows="2" name="motivo" id="motivo" class="form-control form-control-user" readonly><%= consolidacion.reporte.motivo %></textarea>
                      </div>
                    </div>

                    <!-- Divider -->
                    <hr class="sidebar-divider" style="border-top: 1px solid rgb(0 0 0)" />

                    <div class="form-row align-items-center mb-sm-2">
                      <div class="col my-1">
                        <label class="mr-sm-2" for="mes">Mes</label>
                        <input type="text" class="form-control form-control-user" id="mesNA" name="mesNA" value="<%= consolidacion.ForNAdmin.mesNA %>" readonly>
                      </div>
                      <div class="col my-1">
                        <label class="mr-sm-2" for="provinciaID">Provincia</label>
                        <input type="text" class="form-control form-control-user" id="provinciaID" name="provincia" value="<%= user.provincia %>" readonly>
                      </div>
                      <div class="col my-1">
                        <label class="mr-sm-2" for="muniSelect">Municipio</label>
                        <input type="text" class="form-control form-control-user" id="municipio" name="municipio" value="<%= consolidacion.municipio %>" readonly>
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">CONSOLIDADO INFORME MENSUAL</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="entreInfor">Si/No</label>
                        <select id="entreInfor" name="entreInfor" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="SI">Si</option>
                          <option value="NO">No</option>
                        </select>
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">ENTREGA DE CRONOGRAMA DE ACTIVIDADES</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="entreCrono">Si/No</label>
                        <select id="entreCrono" name="entreCrono" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="SI">Si</option>
                          <option value="NO">No</option>
                        </select>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="fechCrono">Fecha de Entrega</label>
                        <input type="date" class="form-control form-control-user" id="fechCrono" name="fechCrono" readonly />
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">CONTROL DE ASISTENCIA AL MUNICIPIO</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="entreAsis">Si/No</label>
                        <select id="entreAsis" name="entreAsis" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="SI">Si</option>
                          <option value="NO">No</option>
                        </select>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="fechAsis">Fecha de Entrega</label>
                        <input type="date" class="form-control form-control-user" id="fechAsis" name="fechAsis" readonly />
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">CUMPLIMIENTO DE CIRCULARES</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="entreCircu">Si/No</label>
                        <select id="entreCircu" name="entreCircu" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="SI">Si</option>
                          <option value="NO">No</option>
                        </select>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="NumCir">N° de Circular</label>
                        <input type="text" class="form-control form-control-user" id="NumCir" name="NumCir" readonly />
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">DEVOLUCIÓN DE ACTAS</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <label class="mr-sm-6" for="numActas">N° de Actas</label>
                        <input type="number" class="form-control form-control-user" min="0" id="numActas" value="<%= consolidacion.ForNAdmin.numActas %>" name="numActas" readonly />
                      </div>
                      <div class="col-sm-4">
                        <label class="mr-sm-4" for="nomActas">Nombre del Acta</label>
                        <textarea type="text" class="form-control form-control-user" id="nomActas" name="nomActas" placeholder="Escriba los nombres segun la cantidad de actas" readonly><%= consolidacion.ForNAdmin.nomActas %></textarea>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-4" for="motDevol">Motivo de Devolucion</label>
                        <textarea type="text" class="form-control form-control-user" id="motDevol" name="motDevol" placeholder="Escriba el motivo de haber devuelto el acta" readonly><%= consolidacion.ForNAdmin.motDevol %></textarea>
                      </div>
                    </div>


                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="observacion">Observaciones
                          (Opcional)</label>
                        <textarea name="observacion" id="observacion" onkeyup="mayus(this);" maxlength="270" rows="2" class="form-control form-control-user"><%= consolidacion.observaciones %></textarea>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2">Archivos Adjuntos</label>
                        <a href="/profesional/evidencia/<%= consolidacion._id %>" target="_blank" type="button" class="btn btn-info">Descargar</a>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="fields">Adjuntar
                          Archivo(s) Nuevos</label>
                        <div class="drop-zone">
                          <span class="drop-zone__prompt">Arrastra el archivo o da click para buscar</span>
                          <input type="file" name="myFile" id="myFile" class="drop-zone__input" />
                        </div>
                      </div>
                    </div>

                    <button class="btn btn-primary btn-user btn-block" type="submit">
                      Enviar Corrección
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../../tools/footer'); %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          Seleccione "Cerrar sesión" a continuación si está listo para
          finalizar su sesión actual.
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">
            Cancelar
          </button>
          <a class="btn btn-primary" href="/profesional/logout">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Validations -->
  <script type="text/JavaScript" src="/js/Profesional/formularios.js"></script>
  <script type="text/JavaScript" src="/js/tools/dropzone.js"></script>

  <!-- Alert -->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <% if(typeof alert !="undefined" ) { %>
  <script type="text/JavaScript">
    Swal.fire({
        title: '<%= alert[0].alertTitle %>',
        text:'<%= alert[0].alertMessage %>',
        icon:'<%= alert[0].alertIcon %>',
        showConfirmButton: <%= alert[0].showConfirmButton %>,
        timer: <%= alert[0].timer %>
      }).then(()=>{
        window.location = '<%= alert[0].ruta %>'
      })
    </script>
  <% } %>

  <script>
    $(window).bind('load', function() {
      var nav = document.getElementById('nav2');
      $('#navlink1').removeClass('collapsed');
      var nav3 = document.getElementById('collapseTwo');
      var nav4 = document.getElementById('show1');
      nav.className += "  active";
      nav3.className += "  show";
      nav4.className += "  active";
    });

    document.getElementById("entreInfor").value = "<%= consolidacion.ForNAdmin.entreInfor %>"
    document.getElementById("entreCrono").value = "<%= consolidacion.ForNAdmin.entreCrono %>"
    document.getElementById("entreAsis").value = "<%= consolidacion.ForNAdmin.entreAsis %>"
    document.getElementById("entreCircu").value = "<%= consolidacion.ForNAdmin.entreCircu %>"

    if ("<%= consolidacion.ForNAdmin.entreCrono %>" == "SI") {
      $("#fechCrono").attr("readonly", false);
      document.getElementById("fechCrono").value = "<%= moment(consolidacion.ForNAdmin.fechCrono,'YYYY/MM/DD').add(1, 'days').format('YYYY-MM-DD'); %>"
    } else {
      $("#fechCrono").attr("readonly", true);
    }
    if ("<%= consolidacion.ForNAdmin.entreAsis %>" == "SI") {
      $("#fechAsis").attr("readonly", false);
      document.getElementById("fechAsis").value = "<%= moment(consolidacion.ForNAdmin.fechAsis,'YYYY/MM/DD').add(1, 'days').format('YYYY-MM-DD'); %>"
    } else {
      $("#fechAsis").attr("readonly", true);
    }
    if ("<%= consolidacion.ForNAdmin.entreCircu %>" == "SI") {
      $("#NumCir").attr("readonly", false);
      document.getElementById("NumCir").value = "<%= consolidacion.ForNAdmin.NumCir %>"
    } else {
      $("#NumCir").attr("readonly", true);
    }

    $("#entreCrono").change(function() {
      if (document.getElementById("entreCrono").value == "SI") {
        $("#fechCrono").attr("readonly", false);
        document.getElementById("fechCrono").setAttribute("max", new Date().toJSON().substring(0, 10));
      } else {
        $("#fechCrono").attr("readonly", true);
        document.getElementById("fechCrono").value = ""
      }
    });
    $("#entreAsis").change(function() {
      if (document.getElementById("entreAsis").value == "SI") {
        $("#fechAsis").attr("readonly", false);
        document.getElementById("fechAsis").setAttribute("max", new Date().toJSON().substring(0, 10));
      } else {
        $("#fechAsis").attr("readonly", true);
        document.getElementById("fechAsis").value = ""
      }
    });
    $("#entreCircu").change(function() {
      if (document.getElementById("entreCircu").value == "SI") {
        $("#NumCir").attr("readonly", false);
      } else {
        $("#NumCir").attr("readonly", true);
        document.getElementById("NumCir").value = ""
      }
    });

    if ("<%= consolidacion.ForNAdmin.numActas %>" != 0) {
      $("#nomActas").attr("readonly", false);
      $("#motDevol").attr("readonly", false);
    } else {
      $("#nomActas").attr("readonly", true);
      $("#motDevol").attr("readonly", true);
    }
  </script>
</body>

</html>