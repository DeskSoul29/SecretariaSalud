<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../../tools/head'); %>
  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../tools/sidebarAdmin'); %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../../tools/topbar'); %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <div class="card shadow mb-4">
            <div id="accordion">

              <div class="card">
                <div class="card-header" id="headingOne">
                  <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                      Listado Por Elección de Consolidaciones
                    </button>
                  </h5>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                  <div class="card-body">
                    <div id="consolidacionVer" class="card text-center">
                      <div class="card-body">
                        <h5 class="card-title">Elija el tipo de Consolidación a Ver
                        </h5>
                        <select id="consoID" name="consolidacion" class="custom-select mr-sm-2" required>
                          <option selected disabled>Seleccione la Consolidación
                          </option>
                          <option>Informe Mensual</option>
                          <option>Cronograma de Actividades</option>
                          <option>Eventos en Salud Pública</option>
                          <option>Establecimientos</option>
                          <option>Morgues</option>
                          <option>Cementerios</option>
                          <option>I.V.C. Publicidad</option>
                          <option>I.V.C. Rotulado</option>
                          <option>Medidas Sanitarias a Establecimientos</option>
                          <option>Medidas Sanitarias a Productos</option>
                          <option>Vehiculos</option>
                          <option>Quejas</option>
                          <option>Toma de Muestras</option>
                          <option>Educación Sanitaria</option>
                          <option>Listado De Carnetizados</option>
                          <option>Antirrabica Animal</option>
                          <option>Permanencia En Municipio</option>
                        </select>
                      </div>
                      <div class="card-footer text-muted">
                        <a id="btnConsolidacionVer" class="btn btn-primary">Continuar</a>
                      </div>
                    </div>

                  </div>
                </div>
              </div>

              <div class="card">
                <div class="card-header" id="headingTwo">
                  <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                      Listado Total de Consolidaciones
                    </button>
                  </h5>
                </div>

                <div id="collapse2" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-bordered table-hover display nowrap" id="dataTable" width="100%" cellspacing="0" style="font-size: 13px;  text-align: center !important;">
                        <thead>
                          <tr>
                            <th>Estado</th>
                            <th>Fecha_Enviado</th>
                            <th>Tipo Consolidación</th>
                            <th>Provincia</th>
                            <th>Municipio</th>
                            <th>Responsable</th>
                          </tr>
                        </thead>
                        <tfoot>
                          <tr>
                            <th>Estado</th>
                            <th>Fecha_Enviado</th>
                            <th>Tipo Consolidación</th>
                            <th>Provincia</th>
                            <th>Municipio</th>
                            <th>Responsable</th>
                          </tr>
                        </tfoot>
                        <tbody>
                          <% if (allConso){ %>
                          <% allConso.forEach((allConso)=> { %>
                          <% if(allConso.SendNovAd=="on" ){ %>
                          <tr>
                            <td>
                              <% if(allConso.status=="Enviado" ){ %>
                              <% if(allConso.consolidacion.establecimiento=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/Establecimientos/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.antirrabica=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/AntirrabicaAnimal/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.eduSanitaria=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/EduSanitaria/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.EvenSaludPubli=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/EventosSaludPublica/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.lisCarnets=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/ListadoCarnetizados/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.vehiculos=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/Vehiculos/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.tomaMuestra=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/TomaMuestras/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.quejas=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/Quejas/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.noveadministrativa=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/NoveAdministrativas/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.viviSalu=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/ViviendaSaludable/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.permMunicipio=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/PermMunicipio/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } %>
                              <% }else if(allConso.status=="Aceptado"){ %>
                              <span class="badge badge-success text-uppercase">Aceptado</span>
                              <% } %>
                            </td>
                            <td>
                              <%= moment(allConso.createdAt,"YYYY/MM/DD").format('YYYY-MM-DD'); %>
                            </td>
                            <td>
                              <% if(allConso.consolidacion.establecimiento=="on" ){ %>
                              Establecimientos
                              <% } else if(allConso.consolidacion.antirrabica=="on" ){ %>
                              Antirrabica Animal
                              <% } else if(allConso.consolidacion.eduSanitaria=="on" ){ %>
                              Educación Sanitaria
                              <% } else if(allConso.consolidacion.EvenSaludPubli=="on" ){ %>
                              Eventos de Salud Publica
                              <% } else if(allConso.consolidacion.lisCarnets=="on" ){ %>
                              Listado de Carnetizados
                              <% } else if(allConso.consolidacion.vehiculos=="on" ){ %>
                              Vehiculos
                              <% } else if(allConso.consolidacion.tomaMuestra=="on" ){ %>
                              Toma de Muestras
                              <% } else if(allConso.consolidacion.quejas=="on" ){ %>
                              Quejas
                              <% } else if(allConso.consolidacion.noveadministrativa=="on" ){ %>
                              Informe Mensual
                              <% } else if(allConso.consolidacion.viviSalu=="on" ){ %>
                              Vivienda Saludable
                              <% } else if(allConso.consolidacion.permMunicipio=="on" ){ %>
                              Permanencia en Municipio
                              <% } %>
                            </td>
                            <td>
                              <%= allConso.provincia %>
                            </td>
                            <td>
                              <%= allConso.municipio %>
                            </td>
                            <td>
                              <%= allConso.responsable.userResponsable %> -
                              <%= allConso.responsable.nombreResponsable %>
                            </td>
                          </tr>
                          <% } %>
                          <% }); %>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>

              </div>

            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../tools/footer'); %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Seleccione "Cerrar
          sesión" a continuación si está listo para
          finalizar su sesión actual.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
          <a class="btn btn-primary" href="/coordinacion/logout">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>

  <!-- Alert -->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Validations -->
  <script type="text/JavaScript" src="/js/Coordinador/validaciones.js"></script>

  <% if(typeof alert !="undefined" ) { %>
  <script type="text/JavaScript">
    Swal.fire({
      title: '<%= alert[0].alertTitle %>',
      text:'<%= alert[0].alertMessage %>',
      icon:'<%= alert[0].alertIcon %>',
      showConfirmButton: <%= alert[0].showConfirmButton %>,
      timer: <%= alert[0].timer %>
    }).then(()=>{
      window.location = '<%= alert[0].ruta %>'
    })
  </script>
  <% } %>

  <script>
    $(window).bind('load', function() {
      var nav = document.getElementById('nav2');
      $('#navlink1').removeClass('collapsed');
      var nav3 = document.getElementById('collapseTwo');
      var nav4 = document.getElementById('show1');
      nav.className += "  active";
      nav3.className += "  show";
      nav4.className += "  active";
    });
    $('#dataTable').DataTable({
      order: [
        [1, 'desc']
      ],
      language: {
        search: "Buscar:",
        info: "Mostrando _START_ elementos a _END_ de _TOTAL_ entradas",
        zeroRecords: "Sin Datos en esta Tabla",
        infoFiltered: " - filtrado desde _MAX_ entradas",
        lengthMenu: "Mostrando _MENU_ entradas",
        paginate: {
          previous: "Anterior",
          next: "Siguiente",
        },
      },
    });
  </script>

</body>

</html>