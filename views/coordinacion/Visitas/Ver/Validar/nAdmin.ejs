<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../../../../tools/head'); %>
  <link rel="stylesheet" href="/css/dropzone.css">
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../../../tools/sidebarAdmin'); %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        <%- include('../../../../tools/topbar'); %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <div class="container">
            <div class="card o-hidden border-0 shadow-lg">
              <div class="card-body p-0">
                <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/coordinacion/Consolidaciones/Ver">Consolidaciones</a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="/coordinacion/Consolidaciones/Ver/NoveAdministrativas">Informe Mensual</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Corregir
                    </li>
                  </ol>
                </nav>
                <!-- Nested Row within Card Body -->
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">INFORME MENSUAL</h1>
                  </div>

                  <form onsubmit="validConsolidacion(event)" action="/coordinacion/Consolidaciones/Validar/NoveAdministrativas/<%= consolidacion._id %>" method="POST">

                    <div class="form-row align-items-center mb-sm-2">
                      <div class="col my-1">
                        <label class="mr-sm-2" for="mes">Mes</label>
                        <input type="text" class="form-control form-control-user" id="mes" name="mes" value="<%= user.mes %>" readonly>
                      </div>
                      <div class="col my-1">
                        <label class="mr-sm-2" for="provinciaID">Provincia</label>
                        <input type="text" class="form-control form-control-user" id="provinciaID" name="provincia" value="<%= user.provincia %>" readonly>
                      </div>
                      <div class="col my-1">
                        <label class="mr-sm-2" for="muniSelect">Municipio</label>
                        <input type="text" class="form-control form-control-user" id="municipio" name="municipio" value="<%= consolidacion.municipio %>" readonly>
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">CONSOLIDADO INFORME MENSUAL</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="entreInfor">Si/No</label>
                        <input type="text" class="form-control form-control-user" value="<%= consolidacion.ForNAdmin.entreInfor %>" readonly>
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">ENTREGA DE CRONOGRAMA DE ACTIVIDADES</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="entreCrono">Si/No</label>
                        <input type="text" class="form-control form-control-user" value="<%= consolidacion.ForNAdmin.entreCrono %>" readonly>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="fechCrono">Fecha de Entrega</label>
                        <input type="text" class="form-control form-control-user" value="<%= moment(consolidacion.ForNAdmin.fechCrono,'YYYY/MM/DD').add(1, 'days').format('DD-MM-YYYY'); %>" readonly />
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">CONTROL DE ASISTENCIA AL MUNICIPIO</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="entreAsis">Si/No</label>
                        <input type="text" class="form-control form-control-user" value="<%= consolidacion.ForNAdmin.entreAsis %>" readonly>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="fechAsis">Fecha de Entrega</label>
                        <input type="text" class="form-control form-control-user" value="<%= moment(consolidacion.ForNAdmin.fechAsis,'YYYY/MM/DD').add(1, 'days').format('DD-MM-YYYY'); %>" readonly />
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">CUMPLIMIENTO DE CIRCULARES</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="entreCircu">Si/No</label>
                        <input type="text" class="form-control form-control-user" value="<%= consolidacion.ForNAdmin.entreCircu %>" readonly>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-2" for="NumCir">N° de Circular</label>
                        <input type="text" class="form-control form-control-user" value="<%= consolidacion.ForNAdmin.NumCir %>" readonly>
                      </div>
                    </div>

                    <div class="row" style="text-align: center !important;">
                      <div class="col-sm-12">
                        <label class="mr-sm-12">DEVOLUCIÓN DE ACTAS</label>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <label class="mr-sm-6" for="numActas">N° de Actas</label>
                        <input type="text" class="form-control form-control-user" value="<%= consolidacion.ForNAdmin.numActas %>" readonly>
                      </div>
                      <div class="col-sm-4">
                        <label class="mr-sm-4" for="nomActas">Nombre del Acta</label>
                        <input type="text" class="form-control form-control-user" value="<%= consolidacion.ForNAdmin.nomActas %>" readonly>
                      </div>
                      <div class="col-sm-6">
                        <label class="mr-sm-4" for="motDevol">Motivo de Devolucion</label>
                        <textarea type="text" class="form-control form-control-user" readonly><%= consolidacion.ForNAdmin.motDevol %></textarea>
                      </div>
                    </div>


                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2" for="observacion">Observaciones
                          (Opcional)</label>
                        <textarea name="observacion" rows="2" class="form-control form-control-user" readonly><%= consolidacion.observaciones %></textarea>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-12">
                        <label class="mr-sm-2">Archivos Adjuntos</label>
                        <a href="/coordinacion/evidencia/<%= consolidacion._id %>" target="_blank" type="button" class="btn btn-info">Descargar</a>
                      </div>
                    </div>

                    <!-- Divider -->
                    <hr class="sidebar-divider" style="border-top: 1px solid rgb(0 0 0)" />

                    <div class="form-group row">
                      <div class="col-sm-3">
                        <label class="mr-sm-2" for="criterio">Criterio</label>
                        <select id="criterio" name="criterio" class="custom-select mr-sm-2">
                          <option selected disabled>Seleccione</option>
                          <option value="Aceptado">Aceptable</option>
                          <option value="Rechazado">Rechazar</option>
                        </select>
                      </div>
                      <div class="col-sm-9" id="divMotivo" style="display: none">
                        <label class="mr-sm-2" for="motivo">Motivo</label>
                        <textarea name="motivo" id="motivo" maxlength="270" rows="2" onkeyup="mayus(this);" class="form-control form-control-user" onkeyup="mayus(this);" placeholder="Escribe el motivo por el que rechazas la consolidación"></textarea>
                      </div>
                    </div>

                    <button class="btn btn-primary btn-user btn-block" type="submit">
                      Enviar Reporte
                    </button>
                    <a type="button" onclick='modalsUsuarios.eliminar_cons("<%= consolidacion._id %>")' data-target="#deleteModal" data-toggle="modal" class="btn btn-danger btn-user btn-block">
                      Eliminar Reporte
                    </a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../../../tools/footer'); %>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Delete Modal-->
  <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">¡ATENCIÓN!</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          ¿Esta seguro de eliminar esta consolidación?
          <br>
          <b>RECUERDE QUE ESTA ACCIÓN ES IRREVERSIBLE</b>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">
            Cancelar
          </button>
          <a id="formDeleteCons" class="btn btn-primary">
            Eliminar
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          Seleccione "Cerrar sesión" a continuación si está listo para
          finalizar su sesión actual.
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">
            Cancelar
          </button>
          <a class="btn btn-primary" href="/profesional/logout">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Validations -->
  <script type="text/JavaScript" src="/js/tools/dropzone.js"></script>
  <script type="text/javascript" src="/js/Coordinador/validaciones.js"></script>
  <script type="text/JavaScript" src="/js/Profesional/formularios.js"></script>

  <!-- Alert -->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <% if(typeof alert !="undefined" ) { %>
  <script type="text/JavaScript">
    Swal.fire({
        title: '<%= alert[0].alertTitle %>',
        text:'<%= alert[0].alertMessage %>',
        icon:'<%= alert[0].alertIcon %>',
        showConfirmButton: <%= alert[0].showConfirmButton %>,
        timer: <%= alert[0].timer %>
      }).then(()=>{
        window.location = '<%= alert[0].ruta %>'
      })
    </script>
  <% } %>

  <script>
    $(window).bind("load", function() {
      var nav = document.getElementById("nav2");
      $("#navlink1").removeClass("collapsed");
      var nav3 = document.getElementById("collapseTwo");
      var nav4 = document.getElementById("show1");
      nav.className += "  active";
      nav3.className += "  show";
      nav4.className += "  active";
    });
  </script>
</body>

</html>