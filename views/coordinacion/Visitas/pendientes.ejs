<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('../../tools/head'); %>
  <!-- Custom styles for this page -->
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.datatables.net/datetime/1.1.2/css/dataTables.dateTime.min.css">
  <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../tools/sidebarAdmin'); %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('../../tools/topbar'); %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <div class="container">
            <div class="card o-hidden border-0 shadow-lg my-5">
              <div class="card-body p-0">

                <!-- Nested Row within Card Body -->
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">PENDIENTES</h1>
                  </div>

                  <div class="card-body">
                    <div class="table-responsive">
                      <div class="col">
                        <div class="row">
                          <div class="col-xl-12">
                            <table border="0" cellspacing="5" cellpadding="5">
                              <tbody>
                                <tr>
                                  <td>Fecha Inicial:</td>
                                  <td><input type="text" id="min" name="min"></td>
                                </tr>
                                <tr>
                                  <td>Fecha Final:</td>
                                  <td><input type="text" id="max" name="max"></td>
                                </tr>
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                      <table class="table table-bordered table-hover display nowrap" id="dataTable" width="100%" cellspacing="0" style="font-size: 13px;  text-align: center !important;">
                        <thead>
                          <tr>
                            <th>Estado</th>
                            <th>Fecha_Enviado</th>
                            <th>Tipo Consolidación</th>
                            <th>Provincia</th>
                            <th>Municipio</th>
                            <th>Responsable</th>
                          </tr>
                        </thead>
                        <tfoot>
                          <tr>
                            <th>Estado</th>
                            <th><input type="text" placeholder="Busca por Fecha_Enviado" /></th>
                            <th><input type="text" placeholder="Busca por Tipo de Consolidación" /></th>
                            <th><input type="text" placeholder="Busca por Provincia" /></th>
                            <th><input type="text" placeholder="Busca por Municipio" /></th>
                            <th><input type="text" placeholder="Busca por Responsable" /></th>
                          </tr>
                        </tfoot>
                        <tbody>
                          <% if (allConso){ %>
                          <% allConso.forEach((allConso)=> { %>
                          <% if(allConso.status=="Enviado" ){ %>
                          <tr>
                            <td>
                              <% if(allConso.consolidacion.establecimiento=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/Establecimientos/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.antirrabica=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/AntirrabicaAnimal/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.eduSanitaria=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/EduSanitaria/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.EvenSaludPubli=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/EventosSaludPublica/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.lisCarnets=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/ListadoCarnetizados/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.vehiculos=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/Vehiculos/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.tomaMuestra=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/TomaMuestras/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.quejas=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/Quejas/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } else if(allConso.consolidacion.noveadministrativa=="on" ){ %>
                              <a href="/coordinacion/Consolidaciones/Validar/NoveAdministrativa/<%= allConso._id %>"><span class="badge badge-info text-uppercase">Enviado</span></a>
                              <% } %>
                            </td>
                            <td>
                              <%= moment(allConso.createdAt,"YYYY/MM/DD").format('YYYY-MM-DD'); %>
                            </td>
                            <td>
                              <% if(allConso.consolidacion.establecimiento=="on" ){ %>
                              Establecimientos
                              <% } else if(allConso.consolidacion.antirrabica=="on" ){ %>
                              Antirrabica Animal
                              <% } else if(allConso.consolidacion.eduSanitaria=="on" ){ %>
                              Educación Sanitaria
                              <% } else if(allConso.consolidacion.EvenSaludPubli=="on" ){ %>
                              Eventos de Salud Publica
                              <% } else if(allConso.consolidacion.lisCarnets=="on" ){ %>
                              Listado de Carnetizados
                              <% } else if(allConso.consolidacion.vehiculos=="on" ){ %>
                              Vehiculos
                              <% } else if(allConso.consolidacion.tomaMuestra=="on" ){ %>
                              Toma de Muestras
                              <% } else if(allConso.consolidacion.quejas=="on" ){ %>
                              Quejas
                              <% } else if(allConso.consolidacion.noveadministrativa=="on" ){ %>
                              Novedad Administrativa
                              <% } %>
                            </td>
                            <td>
                              <%= allConso.provincia %>
                            </td>
                            <td>
                              <%= allConso.municipio %>
                            </td>
                            <td>
                              <%= allConso.responsable.userResponsable %> -
                              <%= allConso.responsable.nombreResponsable %>
                            </td>
                          </tr>
                          <% } %>
                          <% }); %>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>

                </div>

              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include('../../tools/footer'); %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Seleccione "Cerrar
          sesión" a continuación si está listo para
          finalizar su sesión actual.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
          <a class="btn btn-primary" href="/coordinacion/logout">Cerrar Sesión</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/datatables-demo.js"></script>

  <!-- Alert -->
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Search Advanced -->
  <script src="https://cdn.datatables.net/fixedcolumns/4.1.0/js/dataTables.fixedColumns.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.2/moment.min.js"></script>
  <script src="https://cdn.datatables.net/datetime/1.1.2/js/dataTables.dateTime.min.js"></script>

  <% if(typeof alert !="undefined" ) { %>
  <script type="text/JavaScript">
    Swal.fire({
      title: '<%= alert[0].alertTitle %>',
      text:'<%= alert[0].alertMessage %>',
      icon:'<%= alert[0].alertIcon %>',
      showConfirmButton: <%= alert[0].showConfirmButton %>,
      timer: <%= alert[0].timer %>
    }).then(()=>{
      window.location = '<%= alert[0].ruta %>'
    })
  </script>
  <% } %>

  <script>
    $(window).bind('load', function() {
      var nav = document.getElementById('nav2');
      $('#navlink1').removeClass('collapsed');
      var nav3 = document.getElementById('collapseTwo');
      var nav4 = document.getElementById('show2');
      nav.className += "  active";
      nav3.className += "  show";
      nav4.className += "  active";
    });
    var table = $('#dataTable').DataTable({
      order: [
        [1, 'desc']
      ],
      scrollY: true,
      scrollX: true,
      scrollCollapse: true,
      dom: 'frtlip',
      language: {
        search: "Buscar:",
        info: "Mostrando _START_ elementos a _END_ de _TOTAL_ entradas",
        zeroRecords: "Sin Datos en esta Tabla",
        infoFiltered: " - filtrado desde _MAX_ entradas",
        lengthMenu: "Mostrando _MENU_ entradas",
        paginate: {
          previous: "Anterior",
          next: "Siguiente",
        },
      },
    });
    table.columns().every(function() {
      var that = this;
      $('input', this.footer()).on('keyup change', function() {
        that
          .search(this.value)
          .draw();
      });
    });

    var minDate, maxDate;

    $.fn.dataTable.ext.search.push(
      function(settings, data, dataIndex) {
        var min = minDate.val();
        var max = maxDate.val();
        var date = new Date(data[1]);

        if (
          (min === null && max === null) ||
          (min === null && date <= max) ||
          (min <= date && max === null) ||
          (min <= date && date <= max)
        ) {
          return true;
        }
        return false;
      }
    );

    $(document).ready(function() {
      minDate = new DateTime($('#min'), {
        format: 'YYYY-MM-DD'
      });
      maxDate = new DateTime($('#max'), {
        format: 'YYYY-MM-DD'
      });

      $('#min, #max').on('change', function() {
        table.draw();
      });
    });
  </script>

</body>

</html>