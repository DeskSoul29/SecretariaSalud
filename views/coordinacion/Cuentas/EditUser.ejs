<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../../tools/head'); %>
        <script type="text/JavaScript" src="/js/envios.js"></script>

</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../../tools/sidebarAdmin'); %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../../tools/topbar'); %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">


                            <!-- Page Heading -->
                            <div class="container">

                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/coordinacion/Cuentas/Usuarios">Consultar
                                                Usuarios</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Edición</li>
                                    </ol>
                                </nav>

                                <div class="card o-hidden border-0 shadow-lg my-5">
                                    <div class="card-body p-0">
                                        <!-- Nested Row within Card Body -->
                                        <div class="p-5">
                                            <div class="text-center">
                                                <h1 class="h4 text-gray-900 mb-4">Actualización de Usuarios</h1>
                                            </div>

                                            <% if(editUser){ %>
                                                <form onsubmit="editUserForm(event)" action="" method="POST">
                                                    <input name="_method" type="hidden" value="PUT">

                                                    <div class="form-row align-items-center mb-sm-2">
                                                        <div class="col my-1">
                                                            <label class="mr-sm-2" for="provinciaID">Provincia</label>
                                                            <select id="provinciaID" name="provincia"
                                                                class="custom-select mr-sm-2">
                                                                <option selected disabled>Seleccione la Provincia
                                                                </option>
                                                                <% let numberSelected="" ; %>
                                                                    <% if(fields){ %>
                                                                        <% fields.forEach((fields)=> { %>
                                                                            <% if (numberSelected !=fields.provincia){
                                                                                %>
                                                                                <option value="<%= fields.provincia %>">
                                                                                    <%= fields.provincia %>
                                                                                </option>
                                                                                <% numberSelected=fields.provincia %>
                                                                                    <% } %>
                                                                                        <% }) %>
                                                                                            <% } %>
                                                            </select>
                                                        </div>
                                                        <div class="col my-1">
                                                            <label class="mr-sm-2" for="muniSelect">Municipio</label>
                                                            <select id="muniSelect" name="municipio"
                                                                class="custom-select mr-sm-2">
                                                                <option selected disabled>Seleccione el Municipio
                                                                </option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <div class="col-sm-4">
                                                            <label class="mr-sm-2" for="user">Identificación</label>
                                                            <input type="number" class="form-control form-control-user"
                                                                id="user" name="user" value="<%= editUser.user %>" />
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label class="mr-sm-2" for="name">Nombre(s)</label>
                                                            <input type="text"
                                                                class="mayusPal form-control form-control-user"
                                                                id="name" name="name" placeholder="Nombres"
                                                                value="<%= editUser.nombre %>" />
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label class="mr-sm-2" for="lastname">Apellido(s)</label>
                                                            <input type="text"
                                                                class="mayusPal form-control form-control-user"
                                                                id="lastname" name="lastname" placeholder="Apellidos"
                                                                value="<%= editUser.apellido %>" />
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <div class="col-sm-4">
                                                            <label class="mr-sm-2" for="pass">Contraseña
                                                                Nueva</label>
                                                            <input type="password"
                                                                class="form-control form-control-user" id="pass"
                                                                name="pass" placeholder="Contraseña" minlength="4"
                                                                maxlength="12" required />
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label class="mr-sm-2" for="repass">Repite la
                                                                Contraseña</label>
                                                            <input type="password"
                                                                class="form-control form-control-user" id="repass"
                                                                name="repass" placeholder="Repite la Contraseña"
                                                                minlength="4" maxlength="12" required />
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label class="mr-sm-2" for="rol">Rol</label>
                                                            <select class="custom-select mr-sm-2" id="rol" name="rol"
                                                                required>
                                                                <option selected disabled>Seleccione el Rol</option>
                                                                <option value="coordinacion">Coordinación</option>
                                                                <option value="profesional">Profesional</option>
                                                                <option value="tecnico">Tecnico</option>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <% if(editUser.rol=="tecnico" ) { %>
                                                        <div class="form-group row">
                                                            <div class="col-sm-4">
                                                                <label class="mr-sm-2" for="extraMuni1">Municipio de
                                                                    Apoyo 1
                                                                </label>
                                                                <select id="extraMuni1" name="extraMuni1"
                                                                    class="custom-select mr-sm-2">
                                                                    <option selected disabled>Seleccione el
                                                                        Municipio
                                                                    </option>
                                                                </select>
                                                            </div>

                                                            <div class="col-sm-4">
                                                                <label class="mr-sm-2" for="extraMuni2">Municipio de
                                                                    Apoyo 2
                                                                </label>
                                                                <select id="extraMuni2" name="extraMuni2"
                                                                    class="custom-select mr-sm-2">
                                                                    <option selected disabled>Seleccione el
                                                                        Municipio
                                                                    </option>
                                                                </select>
                                                            </div>

                                                            <div class="col-sm-4">
                                                                <label class="mr-sm-2" for="extraMuni3">Municipio de
                                                                    Apoyo 3
                                                                </label>
                                                                <select id="extraMuni3" name="extraMuni3"
                                                                    class="custom-select mr-sm-2">
                                                                    <option selected disabled>Seleccione el
                                                                        Municipio
                                                                    </option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <% } %>

                                                            <button id="update-button"
                                                                class="btn btn-primary btn-user btn-block"
                                                                type="submit">
                                                                Actualizar Usuario
                                                            </button>
                                                </form>
                                                <% } %>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../../tools/footer'); %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Salida</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Seleccione "Cerrar
                    sesión" a continuación si está listo para
                    finalizar su sesión actual.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <a class="btn btn-primary" href="/coordinacion/logout">Cerrar Sesión</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <!-- Validations -->
    <script type="text/JavaScript" src="/js/Coordinador/validaciones.js"></script>
    <script type="text/JavaScript" src="/js/Coordinador/formularios.js"></script>

    <!-- Alert -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script type="text/JavaScript">
        const array = []
        <% if(fields){ %>
            <% fields.forEach((fields)=> { %>
                array.push(["<%= fields.provincia %>"], ["<%= fields.municipio %>"])
            <% }) %>
        <% } %>

      </script>

    <script type="text/JavaScript">
        $(window).bind("load", function () {
            var nav = document.getElementById("nav4");
            $("#navlink3").removeClass("collapsed");
            var nav3 = document.getElementById("collapsePages");
            var nav4 = document.getElementById("show5");
            nav.className += "  active";
            nav3.className += "  show";
            nav4.className += "  active";

            provinciaID.value = "<%= editUser.provincia %>"
            rol.value = "<%= editUser.rol %>"
            modalsUsuarios.llenadoMunicipiosEditUser(document.getElementById("muniSelect"), document.getElementById("provinciaID"), "<%= editUser.municipio %>", "<%= editUser.municipioExtra1 %>", "<%= editUser.municipioExtra2 %>", "<%= editUser.municipioExtra3 %>");
        });
    </script>
</body>

</html>